<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Components.Register.Register">
    
    <Grid RowDefinitions="Auto,*,Auto,Auto" 
          Padding="20,10"
          WidthRequest="320">
        
        <!-- Header section -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Label Text="Create an Account"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Start"
                   Margin="0,0,0,15"/>
            
            <!-- Step indicators -->
            <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                <BoxView Grid.Column="0" HeightRequest="4" BackgroundColor="#00e5ff" VerticalOptions="Center" x:Name="StepIndicator1" />
                <BoxView Grid.Column="1" HeightRequest="4" BackgroundColor="#333333" VerticalOptions="Center" x:Name="StepIndicator2" />
                <BoxView Grid.Column="2" HeightRequest="4" BackgroundColor="#333333" VerticalOptions="Center" x:Name="StepIndicator3" />
                <BoxView Grid.Column="3" HeightRequest="4" BackgroundColor="#333333" VerticalOptions="Center" x:Name="StepIndicator4" />
            </Grid>
        </VerticalStackLayout>
        
        <!-- Content section - will contain the steps -->
        <Grid Grid.Row="1" x:Name="ContentArea">
            <!-- Step content will be inserted here -->
        </Grid>
        
        <!-- Footer with navigation buttons -->
        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,10,0,0">
            <Button Grid.Column="0" 
                    Text="Back" 
                    x:Name="BackButton"
                    Clicked="OnBackClicked"
                    BackgroundColor="#333333"
                    TextColor="White"
                    IsEnabled="False"/>
            
            <Button Grid.Column="1" 
                    Text="Next"
                    x:Name="NextButton"
                    Clicked="OnNextClicked"
                    BackgroundColor="#00e5ff"
                    TextColor="Black"/>
        </Grid>
        
        <!-- Login link -->
        <Label Grid.Row="3"
               Margin="0,20,0,0"
               HorizontalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Already have an account? " TextColor="Gray" />
                    <Span Text="Login" TextColor="#00e5ff" TextDecorations="Underline">
                        <Span.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnLoginTapped" />
                        </Span.GestureRecognizers>
                    </Span>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </Grid>
</ContentView> 