<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Components.Register.UsernameStep">
    
    <VerticalStackLayout Spacing="15">
        <Label 
            Text="Choose a username"
            FontSize="18"
            TextColor="White"
            Margin="0,10,0,5"/>
            
        <Label
            Text="Your username will be visible to other users"
            FontSize="14"
            TextColor="LightGray" />
            
        <Entry 
            x:Name="UsernameEntry"
            Placeholder="Username"
            PlaceholderColor="#7f7f7f"
            BackgroundColor="#2a2a2a"
            TextColor="White"
            TextChanged="OnUsernameChanged"
            Margin="0,10,0,0"/>
            
        <Label
            x:Name="ValidationMessage"
            TextColor="#ff5555"
            FontSize="12"
            Margin="0,5,0,0"
            IsVisible="False" />
            
        <Label
            TextColor="LightGray"
            FontSize="12"
            Text="Username must be 3-16 characters and can contain letters, numbers, underscores, and special characters." />
    </VerticalStackLayout>
    
</ContentView> 