<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Frontend.Models"
             xmlns:local="clr-namespace:Frontend.Components.Dashboard"
             x:Class="Frontend.Components.Dashboard.DashboardView"
             x:DataType="local:DashboardView">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Your Platforms" 
                   TextColor="#00e5ff" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   Margin="0,0,0,20"/>
            
            <!-- Search Bar -->
            <Frame BackgroundColor="#333333" 
                   CornerRadius="10" 
                   Padding="15" 
                   Margin="0,0,0,20"
                   BorderColor="Transparent">
                <Grid ColumnDefinitions="*,Auto">
                    <Entry Placeholder="Search platforms..." 
                           PlaceholderColor="Gray" 
                           TextColor="White"
                           BackgroundColor="Transparent"
                           Grid.Column="0"
                           TextChanged="OnSearchEntryTextChanged"/>
                    <ImageButton Grid.Column="1" 
                                 BackgroundColor="Transparent"
                                 VerticalOptions="Center"
                                 WidthRequest="30"
                                 HeightRequest="30">
                        <ImageButton.Source>
                            <FontImageSource FontFamily="MaterialIcons" 
                                             Glyph="&#xe8b6;"
                                             Color="#00e5ff"
                                             Size="30"/>
                        </ImageButton.Source>
                    </ImageButton>
                </Grid>
            </Frame>
            
            <!-- Loading and Error Indicators -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                             IsVisible="False"
                             IsRunning="False"
                             Color="#00e5ff"
                             HeightRequest="50"
                             WidthRequest="50"
                             HorizontalOptions="Center"
                             Margin="0,10,0,10"/>
                             
            <Label x:Name="ErrorMessageLabel"
                   IsVisible="False"
                   TextColor="#ff4444"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>
                   
            <Label x:Name="NoPlatformsLabel"
                   Text="No platforms found. Add a platform in the Accounts section to get started."
                   IsVisible="False"
                   TextColor="LightGray"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>
            
            <!-- Dynamic Platform Cards -->
            <CollectionView ItemsSource="{Binding PlatformItems}"
                          EmptyView="No platforms available"
                          SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:PlatformItem">
                        <Frame BackgroundColor="#333333" 
                               CornerRadius="10" 
                               Padding="15" 
                               Margin="0,0,0,15"
                               HasShadow="False">
                            <VerticalStackLayout>
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <!-- Platform Icon -->
                                    <Label Grid.Column="0" 
                                           Text="{Binding Icon}" 
                                           FontSize="32" 
                                           VerticalOptions="Center"
                                           Margin="0,0,15,0"/>
                                    
                                    <!-- Platform Name and Account Count -->
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                        <Label Text="{Binding Name}" 
                                               TextColor="White" 
                                               FontSize="18" 
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding AccountCountDisplay}" 
                                               TextColor="LightGray" 
                                               FontSize="14"/>
                                    </VerticalStackLayout>
                                    
                                    <!-- View Accounts Button/Icon -->
                                    <ImageButton Grid.Column="2" 
                                                 BackgroundColor="Transparent"
                                                 Command="{Binding ViewAccountsCommand}"
                                                 CommandParameter="{Binding .}"
                                                 VerticalOptions="Center"
                                                 WidthRequest="30"
                                                 HeightRequest="30"
                                                 Aspect="AspectFit">
                                        <ImageButton.Source>
                                            <FontImageSource FontFamily="MaterialIcons" 
                                                             Glyph="&#xe873;"
                                                             Color="#00e5ff"
                                                             Size="30"/>
                                        </ImageButton.Source>
                                    </ImageButton>
                                </Grid>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <!-- Removed all static sample cards -->
        </VerticalStackLayout>
    </ScrollView>
</ContentView> 