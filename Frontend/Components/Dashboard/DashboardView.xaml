<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Components.Dashboard.DashboardView">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Your Platforms" 
                   TextColor="#00e5ff" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   Margin="0,0,0,20"/>
            
            <!-- Search Bar -->
            <Frame BackgroundColor="#333333" 
                   CornerRadius="10" 
                   Padding="15" 
                   Margin="0,0,0,20"
                   BorderColor="Transparent">
                <Grid ColumnDefinitions="*,Auto">
                    <Entry Placeholder="Search platforms..." 
                           PlaceholderColor="Gray" 
                           TextColor="White"
                           BackgroundColor="Transparent"
                           Grid.Column="0"/>
                    <Button Text="ðŸ”" 
                            Grid.Column="1" 
                            BackgroundColor="Transparent" 
                            TextColor="#00e5ff"/>
                </Grid>
            </Frame>
            
            <!-- Loading and Error Indicators -->
            <ActivityIndicator x:Name="LoadingIndicator" 
                             IsVisible="False"
                             IsRunning="False"
                             Color="#00e5ff"
                             HeightRequest="50"
                             WidthRequest="50"
                             HorizontalOptions="Center"
                             Margin="0,10,0,10"/>
                             
            <Label x:Name="ErrorMessageLabel"
                   IsVisible="False"
                   TextColor="#ff4444"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>
                   
            <Label x:Name="NoPlatformsLabel"
                   Text="No platforms found. Add a platform in the Accounts section to get started."
                   IsVisible="False"
                   TextColor="LightGray"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20"/>
            
            <!-- Dynamic Platform Cards -->
            <CollectionView ItemsSource="{Binding PlatformItems}"
                          EmptyView="No platforms available">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                   Span="2"
                                   HorizontalItemSpacing="15"
                                   VerticalItemSpacing="15" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#333333" 
                               CornerRadius="10" 
                               Padding="15" 
                               Margin="0,0,15,15"
                               WidthRequest="300"
                               HeightRequest="100">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <!-- Platform Icon (Folder) -->
                                <Label Grid.Column="0" 
                                       Text="{Binding Icon}" 
                                       FontSize="32" 
                                       VerticalOptions="Center"
                                       Margin="0,0,15,0"/>
                                
                                <!-- Platform Name -->
                                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                    <Label Text="{Binding Name}" 
                                           TextColor="White" 
                                           FontSize="18" 
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding AccountCount, StringFormat='{0} accounts'}" 
                                           TextColor="LightGray" 
                                           FontSize="14"/>
                                </VerticalStackLayout>
                                
                                <!-- View Button -->
                                <Button Grid.Column="2" 
                                        Text="View Accounts" 
                                        BackgroundColor="#00e5ff" 
                                        TextColor="Black"
                                        CornerRadius="5"
                                        VerticalOptions="Center"
                                        Command="{Binding ViewCommand}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <!-- Removed all static sample cards -->
        </VerticalStackLayout>
    </ScrollView>
</ContentView> 