<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.Components.Accounts.AddAccount.AddAccountView"
             Title="Add Account">
    
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Add Account" 
               TextColor="#00e5ff" 
               FontSize="32" 
               FontAttributes="Bold"
               Margin="0,0,0,20"/>
        
        <Frame BackgroundColor="#1a1a1a" 
               BorderColor="#333333" 
               CornerRadius="5" 
               Padding="15">
            <VerticalStackLayout Spacing="15">
                <Label Text="Platform" 
                       TextColor="White" 
                       FontSize="16"/>
                
                <Label x:Name="PlatformNameLabel"
                       TextColor="#00e5ff"
                       FontSize="18"
                       FontAttributes="Bold"/>
                
                <Label Text="Username" 
                       TextColor="White" 
                       FontSize="16"
                       Margin="0,10,0,0"/>
                
                <Entry x:Name="UsernameEntry" 
                       Placeholder="Enter username" 
                       PlaceholderColor="#666666"
                       TextColor="White"
                       BackgroundColor="#262626"/>
                
                <Label Text="Password" 
                       TextColor="White" 
                       FontSize="16"
                       Margin="0,10,0,0"/>
                
                <Grid ColumnDefinitions="*, Auto">
                    <Entry Grid.Column="0"
                           x:Name="PasswordEntry" 
                           Placeholder="Enter password" 
                           PlaceholderColor="#666666"
                           TextColor="White"
                           IsPassword="True"
                           BackgroundColor="#262626"/>
                    
                    <Button Grid.Column="1"
                            x:Name="ShowPasswordButton"
                            Text="ðŸ‘ï¸"
                            BackgroundColor="#333333"
                            TextColor="White"
                            WidthRequest="40"
                            Margin="5,0,0,0"/>
                </Grid>
                
                <Label Text="Description" 
                       TextColor="White" 
                       FontSize="16"
                       Margin="0,10,0,0"/>
                
                <Editor x:Name="DescriptionEditor" 
                        Placeholder="Enter description (optional)" 
                        PlaceholderColor="#666666"
                        TextColor="White"
                        BackgroundColor="#262626"
                        HeightRequest="100"
                        AutoSize="TextChanges"/>
            </VerticalStackLayout>
        </Frame>
        
        <HorizontalStackLayout HorizontalOptions="End" Spacing="10">
            <Button Text="Cancel" 
                    BackgroundColor="#333333" 
                    TextColor="White"
                    CornerRadius="5"
                    HeightRequest="40"
                    WidthRequest="100"
                    x:Name="CancelButton"/>
            
            <Button Text="Create Account" 
                    BackgroundColor="#00e5ff" 
                    TextColor="Black"
                    CornerRadius="5"
                    HeightRequest="40"
                    WidthRequest="150"
                    x:Name="CreateButton"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage> 