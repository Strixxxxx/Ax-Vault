<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Frontend.Components.Toasts"
             x:Class="Frontend.Components.Toasts.ToastNotification"
             x:Name="This"
             x:DataType="local:ToastNotification"
             Padding="10">
    <Border BackgroundColor="#333333"
            Stroke="#555555"
            StrokeThickness="1"
            Padding="15,10">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="8"/>
        </Border.StrokeShape>
        <Border.Shadow>
            <Shadow Brush="Black" Offset="0,5" Radius="10" Opacity="0.5"/>
        </Border.Shadow>
        <Label x:Name="MessageLabel"
               Text="{Binding Source={x:Reference This}, Path=Message}"
               TextColor="White"
               FontSize="16"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </Border>
</ContentView>