<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:login="clr-namespace:Frontend.Components.Login"
             xmlns:layout="clr-namespace:Frontend.Components.Layout"
             xmlns:register="clr-namespace:Frontend.Components.Register"
             x:Class="Frontend.MainPage"
             BackgroundColor="#1a1a1a"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="*,Auto">
        <!-- Main content area that will switch between Login view and Dashboard -->
        <Grid Grid.Row="0">
            <!-- Login View (visible initially) -->
            <login:LoginView x:Name="LoginView" IsVisible="True" />

            <!-- Register Component (initially hidden) -->
            <register:Register x:Name="RegisterComponent" IsVisible="False" VerticalOptions="Center" HorizontalOptions="Center" />
            
            <!-- Main Layout Component (contains Dashboard, Accounts, Backup) -->
            <layout:MainLayout x:Name="MainLayoutComponent" IsVisible="False" />
        </Grid>
        
        <!-- Copyright text -->
        <Label Grid.Row="1"
              Text="© 2025 Ax Vault. All rights reserved."
              FontSize="12"
              TextColor="Gray"
              HorizontalOptions="Center"
              VerticalOptions="End"
              Margin="0,20,0,20" />
    </Grid>
</ContentPage>
